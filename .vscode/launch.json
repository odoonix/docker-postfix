    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: FastAPI",
            "type": "debugpy",
            "request": "launch",
            "module": "uvicorn",
            "cwd": "${workspaceFolder}/api",
            "args": [
                "fastapi_app:app",
                "--reload",
                "--reload-dir", "${workspaceFolder}/api",
                "--log-level", "info",
                "--host", "0.0.0.0",
                "--port", "8000"
            ],
            "jinja": true
        }
    ]
}